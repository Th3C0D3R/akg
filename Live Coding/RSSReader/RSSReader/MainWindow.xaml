<Window
    x:Class="RSSReader.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RSSReader"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <!--  Titelbereich  -->
            <RowDefinition Height="100" />
            <!--  Untere Fensterhälfte  -->
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <DockPanel LastChildFill="True">
            <Image
                Width="100"
                Height="100"
                DockPanel.Dock="Left"
                Source="{Binding ImageUrl}" />

            <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                DockPanel.Dock="Top"
                FontSize="30"
                FontWeight="Bold"
                Text="{Binding Title.Text}" />

            <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                DockPanel.Dock="Top"
                FontSize="15"
                FontWeight="Bold"
                Text="{Binding Description.Text}"
                TextWrapping="Wrap" />
        </DockPanel>

        <!--  Untere Fensterhälfte  -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <!--  Item-List  -->
                <ColumnDefinition Width="1*" />
                <!--  Splitter  -->
                <ColumnDefinition Width="5" />
                <!--  Meldungen  -->
                <ColumnDefinition Width="4*" />
            </Grid.ColumnDefinitions>

            <ListBox
                x:Name="lstItems"
                Grid.Row="0"
                Grid.Column="0"
                ItemsSource="{Binding Items}" />

            <GridSplitter
                Grid.Column="1"
                Width="5"
                HorizontalAlignment="Center" />

            <!--  Meldungsbereich  -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Image Source="{Binding ElementName=lstItems, Path=SelectedItem.Links[1].Uri}" />

                <TextBlock
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.Column="1"
                    FontSize="14"
                    FontWeight="Bold"
                    Text="{Binding ElementName=lstItems, Path=SelectedItem.Title.Text}" />

                <TextBlock
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.Column="1"
                    Text="{Binding ElementName=lstItems, Path=SelectedItem.Summary.Text}"
                    TextWrapping="Wrap" />
            </Grid>
        </Grid>
    </Grid>
</Window>
